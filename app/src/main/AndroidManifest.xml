<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anthony.softwareeng">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logopic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeUserActivity"
            android:label="@string/title_activity_home_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeAdminActivity"
            android:label="@string/title_activity_home_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FindReservationActivity"
            android:label="@string/title_activity_find_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReservationInfoUserActivity"
            android:label="@string/title_activity_reservation_info_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminReserveSpotActivity"
            android:label="@string/title_activity_admin_reserve_spot"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SpotPicker"
            android:label="@string/title_activity_spot_picker"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>